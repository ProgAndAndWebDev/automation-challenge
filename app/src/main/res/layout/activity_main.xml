<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.appcompat.widget.SearchView
    android:id="@+id/search"
    android:layout_margin="12dp"
    android:queryHint="enter link here"
    android:layout_width="0dp"
    android:background="@drawable/rec"
    android:elevation="2dp"
    app:iconifiedByDefault="false"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/web"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_height="wrap_content"/>
    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/search_lottie"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_rawRes="@raw/lf30_editor_ojong4wi"
        app:layout_constraintTop_toBottomOf="@id/search"/>
 <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/search_fail_lottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_margin="16dp"
        android:visibility="gone"
     app:lottie_loop="true"
     app:lottie_autoPlay="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_rawRes="@raw/notfound"
        app:layout_constraintTop_toBottomOf="@id/search"/>
</androidx.constraintlayout.widget.ConstraintLayout>